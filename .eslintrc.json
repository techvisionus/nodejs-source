{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "root": true,
    "globals": {
        "process": true,
        "logger": true
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "avoid",
                "semi": false,
                "trailingComma": "none",
                "endOfLine": "lf",
                "tabWidth": 4,
                "printWidth": 120,
                "useTabs": false
            }
        ],
        "no-console": "warn",
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off"
    }
}
